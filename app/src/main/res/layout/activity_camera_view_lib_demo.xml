    <com.base.cameraview.video.CameraTakeVideoSafe
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:keepScreenOn="true"
        app:cameraAudio="on"
        app:cameraDrawHardwareOverlays="true"
        app:cameraEngine="camera2"
        app:cameraExperimental="true"
        app:cameraFacing="front"
        app:cameraFrameProcessingMaxHeight="640"
        app:cameraFrameProcessingMaxWidth="480"
        app:cameraGrid="off"
        app:cameraMode="video"
        app:cameraPlaySounds="true"
        app:cameraPreview="glSurface"
        app:cameraSnapshotMaxHeight="640"
        app:cameraSnapshotMaxWidth="480"
        app:cameraUseDeviceOrientation="false"
        app:cameraVideoSizeMaxHeight="640"
        app:cameraVideoSizeMaxWidth="480">

    </com.base.cameraview.video.CameraTakeVideoSafe>

    <ImageView
